<!DOCTYPE html>
<html lang="en">
{{>baseHead customTitle=customTitle}}
<body>
    {{>siteHeader}}
    <section class="section">
        <div class="container">
    {{#if onePost}}
        <div class="box">
        <h2>{{onePost.title}}</h2>
        <p>
          <span>{{onePost.from}} | </span>
          <span class="text-gray">{{onePost.createdAtText}}</span>
        </p>
        <div>{{onePost.content}}</div>
    </div>
    <hr>
            <form action="/p/{{ onePost.id }}/comment" method="post">
            <p>
                <textarea name="content" placeholder="แสดงความคิดเห็น" rows="3">{{values.content}}</textarea>
            </p>
            <p>
                <input type="text" name="from" placeholder="จากคุณ" value="{{values.from}}">
            </p>
            <p>
                <input id="input-accepted" type="checkbox" name="accepted">
                <label class="user-select" for="input-accepted">โปรดยืนยันการแสดงความคิดเห็น</label>
            </p>
            <p>
                <button class="button" type="submit">คอมเม้นท์</button>
            </p>
            {{#if errorMessage}}
                <p>{{ errorMessage }}</p>
            {{/if}}
        </form>
    <hr>
    {{#if postComments }}
        <h4>{{ postComments.length }} คอมเม้นท์</h4>
    {{else}}
        <h4>ยังไม่มีคอมเม้นท์</h4>
    {{/if}}
    {{#each postComments }}
        <div class="box">
            <p>
                <span>{{this.from}} | </span>
                <span class="text-gray">{{this.createdAtText}}</span>
            </p>
            <p>{{this.content}}</p>
        </div>
        {{/each}}
    {{else}}
    <div>
        <h2>ไม่พบเนื้อหาการแสดงผล</h2>
    </div>
    {{/if}}
        </div>
    </section>
    {{>siteFooter}}
    {{>siteScrollTop}}
    {{>siteSrcpts}}
</body>
</html>